{
  "host": "0.0.0.0",
  "http_port": 7000,
  "tls_port": 8091,
  "run_tls_server": false,
  "run_http_server": true,
  "allow_all_origin": true,
  "allowed_origins": [],
  "allowed_headers": ["Content-Type", "Authorization"],
  "max_call_recv_msg_size": 10485760,
  "max_call_send_msg_size": 10485760,
  
  "grpc_services": [
    {
      "service_name": "auth.AuthService",
      "is_grpc": true,
      "max_call_recv_msg_size": 5242880,
      "backends": [
        {"address": "localhost:9001"},
        {"address": "localhost:9002"}
      ]
    },
    {
      "service_name": "legacy.APIService",
      "is_grpc": false,
      "backends": [
        {"address": "http://localhost:8080"}
      ]
    }
  ],
  
  "http_routes": [
    {
      "path": "/api/v1",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "backends": [
        {"address": "http://localhost:8081"},
        {"address": "http://localhost:8082"}
      ]
    },
    {
      "path": "/grpc/{service}/{method}",
      "methods": ["POST"],
      "target_protocol": "grpc",
      "backends": [
        {"address": "localhost:9000"}
      ]
    }
  ]
}